# lightning.pytorch==2.0.0
seed_everything: true
trainer:
  accelerator: auto
  strategy: auto
  devices: auto
  num_nodes: 1
  precision: 32
  logger:
    class_path: TensorBoardLogger
    init_args:
      save_dir: 'source_models'
      name: 'cifar100/source_model_OPDA'  # select storage directory
      version: ''
  log_every_n_steps: 5
  max_epochs: 50  # we used 50 for all datasets
  min_epochs: null
  check_val_every_n_epoch: 1
  enable_checkpointing: False
model:
  class_path: networks.SourceModule
  init_args:
    feature_dim: 256
    lr: 1e-2  # we used 1e-2 for all datasets
data:
  class_path: datasets.CIFAR100DataModule  # change to datasets.DomainNetDataModule for DomainNet dataset and to datasets.CIFAR10DataModule for CIFAR10-C dataset
  init_args:
    batch_size: 64
    category_shift: 'OPDA'  # select category shift scenario
#    train_domain: 'clipart'  # select domain for source training for DomainNet